{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Volunteer",
  "description": "志愿者数据结构",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "志愿者唯一标识符",
      "pattern": "^VM-\\d{4}$"
    },
    "chineseName": {
      "type": "string",
      "description": "中文姓名"
    },
    "englishName": {
      "type": "string",
      "description": "英文姓名"
    },
    "avatar": {
      "type": "string",
      "description": "头像URL",
      "format": "uri"
    },
    "status": {
      "type": "string",
      "enum": ["active", "inactive", "pending"],
      "description": "在职状态"
    },
    "region": {
      "type": "string",
      "description": "所属地区"
    },
    "services": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["translation", "proofreading", "management", "technical", "other"]
      },
      "description": "服务方向"
    },
    "totalHours": {
      "type": "number",
      "minimum": 0,
      "description": "总服务时长（小时）"
    },
    "serviceCount": {
      "type": "integer",
      "minimum": 0,
      "description": "服务次数"
    },
    "email": {
      "type": "string",
      "format": "email",
      "description": "电子邮件"
    },
    "phone": {
      "type": "string",
      "description": "联系电话"
    },
    "joinDate": {
      "type": "string",
      "format": "date",
      "description": "加入日期"
    },
    "lastActive": {
      "type": "string",
      "format": "date-time",
      "description": "最后活跃时间"
    },
    "description": {
      "type": "string",
      "description": "个人简介"
    },
    "timezone": {
      "type": "string",
      "description": "时区"
    },
    "currentLocation": {
      "type": "object",
      "properties": {
        "country": { "type": "string" },
        "city": { "type": "string" },
        "coordinates": {
          "type": "object",
          "properties": {
            "lat": { "type": "number" },
            "lng": { "type": "number" }
          }
        }
      }
    }
  },
  "required": ["id", "chineseName", "status", "region"],
  "additionalProperties": false
}
